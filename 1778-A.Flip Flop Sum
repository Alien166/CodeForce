#include<bits/stdc++.h>
using namespace std;
void solve()
{
    int n,sum=0;
    cin>>n;
    vector<int> v(n);
    for(int i=0;i<n;++i)
    {
        cin>>v[i];
        sum +=v[i];
    }
    bool ans=0;
    for(int i=0;i<n;++i)
    {
        if(v[i]==-1&&v[i-1]==-1)
        {
            ans=1;
        }
    }
    if(ans){
        cout<<sum+4<<endl;
    }
    else{
        if(sum==n)
        {
            cout<<sum-4<<endl;
        } else {
            cout<<sum<<endl;
        }
    }
}
int main()
{
int testcase;
cin>>testcase;
    while (testcase--)
    {
      solve();
    }

    return 0;
}
