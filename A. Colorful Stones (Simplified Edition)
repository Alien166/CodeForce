#include<bits/stdc++.h>
using namespace std;
int main()
{
    string str=""; cin>>str;
    string ins=""; cin>>ins;
    int x=ins.size();
    int ans=0;
    for(int i=0;i<x;++i)
    {
        if(ins[i]==str[ans])
        {
            ans +=1;
        }

    }
   cout<<ans+1;     // Plus one cuz it's 1-based position
    return 0;

}
