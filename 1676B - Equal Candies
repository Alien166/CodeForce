#include <iostream>
#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
      int n,c=0; 
      cin>>n;
      int *a=new int[n];
      for(int i=0;i<n;i++){
      cin>>a[i];
      }
      sort(a ,a+n);
      for(int i=1;i<n;i++){
     c +=a[i] - a[0];
      }
      cout<<c<<endl;  
    }
 
    return 0;
}
